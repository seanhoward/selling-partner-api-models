<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <id>Hannibalystic.Amazon.Client</id>
    <version>$version$</version>
    <title>$title$</title>
    <authors>$author$</authors>
    <owners>$author$</owners>

    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <developmentDependency>false</developmentDependency>

    <description>$description$</description>

    <!-- Modern license element replaces deprecated licenseUrl -->
    <license type="expression">Apache-2.0</license>

    <!-- Optional but recommended -->
    <readme>README.md</readme>

    <dependencies>
      <dependency id="Hannibalystic.Amazon.Base" version="1.0.0.5" />
      <dependency id="JsonSubTypes" version="1.2.0" />
      <dependency id="Newtonsoft.Json" version="13.0.3" />
      <dependency id="RestSharp" version="106.12.0" />
      <dependency id="System.Threading.RateLimiting" version="7.0.0" />
    </dependencies>
  </metadata>

  <files>
    <!-- README must be placed at the package root -->
    <file src="..\..\README.md" target="README.md" />

    <!-- Docs folder -->
    <file src="..\..\docs\**\*.*" target="docs" />
  </files>
</package>